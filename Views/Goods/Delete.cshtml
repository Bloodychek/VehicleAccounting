@model VehicleAccounting.Models.Goods

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверенны что хотите удалить эту запись?</h3>
<div>
    <h4>Товары</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.applicationId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Application.applicationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.typeOfGoodsId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeOfGood.nameOfGoods)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.countOfGoods)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.countOfGoods)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">На главную</a>
    </form>
</div>
